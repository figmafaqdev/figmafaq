<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "{{ title }}",
  "description": "{{ description }}",
  "totalTime": "PT5M",
  "step": [
    {% for step in steps %}
    {
      "@type": "HowToStep",
      "text": "{{ step }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
